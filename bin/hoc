STDOUT.sync = true

require 'hoc'
require 'slop'
require 'hoc/version'

args = []
args.concat(File.read('.hoc').split(/\s+/).map(&:strip)) if File.exist?('.hoc')
args.concat(ARGV)

opts = Slop.parse(args, strict: true, help: true) do |o|
  o.banner = "Usage (#{HOC::VERSION}): hoc [options]"
  o.bool '-h', '--help', 'Show brief intro'
  o.string(
    '-f',
    '--format',
    'Output format (text|xml|json|int)',
    default: 'int'
  )
  o.array(
    '-e',
    '--exclude',
    'Glob pattern to exclude files/dirs, e.g. "vendor/**"'
  )
  o.string(
    '-d',
    '--dir',
    'Directory to scan',
    default: '.'
  )
  o.string(
    '-a',
    '--author',
    'Filter to show only HoC for the given user',
    default: ''
  )
end

if opts.help?
  puts opts
  exit
end

if opts[:author] != ''
  puts "Showing the HoC for the author #{opts[:author]}"
end

Encoding.default_external = Encoding::UTF_8
Encoding.default_internal = Encoding::UTF_8

puts HOC::Base.new(opts).report
